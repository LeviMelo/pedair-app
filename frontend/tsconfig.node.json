{
  "compilerOptions": {
    "composite": true, // Recommended when using project references
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node", // Use Node's resolution algorithm
    "allowSyntheticDefaultImports": true // Helps with some CJS/ESM interop
  },
  "include": ["vite.config.ts"]
}